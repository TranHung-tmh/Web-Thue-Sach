                            <a class="login2" href="/login.html"><i class="fa fa-user"></i>Tài Khoản</a>
                            <a class="hover-backroud" href="#">Trang chủ</a>
                            <a class="hover-backroud" href="#">Sản phẩm </a>
                            <a class="hover-backroud" href="#">Giới thiệu</a>
                        </div>
                        <div id="main" class="navigation-left">
                            <div class="menu"><button class="openbtn" onclick="openNav()">&#9776;</button></div>
                            <div><img src="/images/logo/logo.png" alt=""></div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="navigation-center">
                            <div class="navbar">
                                <nav>
                                    <a href="/index.html">Trang chủ</a>
                                    <a href="#sanpham">Sản phẩm</a>
