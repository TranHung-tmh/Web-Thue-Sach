    <script>
        var describle_btn = document.querySelector('#describle-btn');
        var information_btn = document.querySelector('#information-more-btn');
        var valuate_btn = document.querySelector('#valuate-btn');
        var describle_btn = document.querySelector('#describle-btn');
        var describle = document.querySelector(".container__describle-describle");
        var information = document.querySelector(".container__describle-information-more");
        var valuate = document.querySelector(".container__describle-valuate");
        describle_btn.onclick = (e) => {
            describle.style.display = 'block';
            information.style.display = 'none';
            valuate.style.display = 'none';
            describle_btn.style.backgroundColor = 'white';
            describle_btn.style.borderBottom = '2px solid black';
            describle_btn.style.borderRadius = '0';
            information_btn.style.backgroundColor = '#ede7e7';
            information_btn.style.borderBottom = 'none';
            information_btn.style.borderRadius = '5px';
            valuate_btn.style.backgroundColor = '#ede7e7';
            valuate_btn.style.borderBottom = 'none';
            valuate_btn.style.borderRadius = '5px';
        }
        information_btn.onclick = (e) => {
            describle.style.display = 'none';
            information.style.display = 'block';
            valuate.style.display = 'none';
            information_btn.style.backgroundColor = 'white';
            information_btn.style.borderBottom = '2px solid black';
            information_btn.style.borderRadius = '0';
            describle_btn.style.backgroundColor = '#ede7e7';
            describle_btn.style.borderBottom = 'none';
            describle_btn.style.borderRadius = '5px';
            valuate_btn.style.backgroundColor = '#ede7e7';
            valuate_btn.style.borderBottom = 'none';
            valuate_btn.style.borderRadius = '5px';
        }
        valuate_btn.onclick = (e) => {
            describle.style.display = 'none';
            information.style.display = 'none';
            valuate.style.display = 'block';
            valuate_btn.style.backgroundColor = 'white';
            valuate_btn.style.borderBottom = '2px solid black';
            valuate_btn.style.borderRadius = '0';
            information_btn.style.backgroundColor = '#ede7e7';
            information_btn.style.borderBottom = 'none';
            information_btn.style.borderRadius = '5px';
            describle_btn.style.backgroundColor = '#ede7e7';
            describle_btn.style.borderBottom = 'none';
            describle_btn.style.borderRadius = '5px';
        }
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var checkboxes = document.querySelectorAll('.rental-checkbox');
            var totalPriceElement = document.getElementById('totalPrice');

            checkboxes.forEach(function (checkbox) {
                checkbox.addEventListener('change', function () {
                    checkboxes.forEach(function (cb) {
                        if (cb !== checkbox) {
                            cb.checked = false;
                        }
                    });

                    if (checkbox.checked) {
                        var price = parseFloat(checkbox.getAttribute('data-price')).toFixed(2).replace(/\.?0+$/, '')+'$';
                        totalPriceElement.textContent = price.toLocaleString('en-US', { style: 'currency', currency: 'USD' });
                    } else {
                        totalPriceElement.textContent = '0$';
                    }
                });
            });
        });
        document.addEventListener("DOMContentLoaded", function () {
            var priceElements = document.querySelectorAll('.price-value');

            priceElements.forEach(function (element) {
                var priceText = element.textContent.trim();
                var priceValue = parseFloat(priceText.replace(/\$/, '')); // Loại bỏ dấu $
                // Loại bỏ các số 0 không cần thiết sau dấu chấm
                var formattedPrice = priceValue.toFixed(2).replace(/\.?0+$/, '');
                element.textContent = formattedPrice + ' $'; // Thêm lại dấu $
            });
        });
    </script>


